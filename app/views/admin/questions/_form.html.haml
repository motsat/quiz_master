= form_with(model: [:admin, question], local: true) do |form|
  - if question.errors.any?
    #error_explanation
      %h2
        = pluralize(question.errors.count, "error")
        prohibited this question from being saved:
      %ul
        - question.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :content
    = form.text_area :content, class: "tinymce"
    = tinymce
  .field
    = form.label :right_answer
    %br
    = form.text_field :right_answer, class: 'form-control'
  .field
    = form.label :display_order
    %br
    = form.number_field :display_order, class: 'form-control'
  .actions
    = form.submit class: 'btn btn-warning'
