<p id="notice"><%= notice %></p>

<h1>Admin Questions</h1>

<table>
  <thead>
    <tr>
      <th>title</th>
      <th>right_answer</th>
      <th>display_order</th>
      <th>created_at</th>
      <th>updated_at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.title %></td>
        <td><%= question.right_answer %></td>
        <td><%= question.display_order %></td>
        <td><%= question.created_at %></td>
        <td><%= question.updated_at %></td>
        <td><%= link_to 'Show', [:admin, question] %></td>
        <td><%= link_to 'Edit', edit_admin_question_path(question) %></td>
        <td><%= link_to 'Destroy', [:admin, question], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

