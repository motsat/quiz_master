%p#notice= notice
%h1 Admin Questions
%table
  %thead
    %tr
      %th title
      %th right_answer
      %th display_order
      %th created_at
      %th updated_at
      %th{:colspan => "3"}
  %tbody
    - @questions.each do |question|
      %tr
        %td.question-title 
          = question.title
        %td 
          = question.right_answer
        %td 
          = question.display_order
        %td 
          = question.created_at
        %td 
          = question.updated_at
        %td
          = link_to 'Show', [:admin, question]
        %td
          = link_to 'Edit', edit_admin_question_path(question)
        %td
          = link_to 'Destroy', [:admin, question], method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Question', new_admin_question_path
