%p#notice= notice
%h1 Admin Questions
%table.table
  %thead
    %tr
      %th id
      %th content
      %th right_answer
      %th display_order
      %th created_at
      %th updated_at
      %th{:colspan => "3"}
  %tbody
    - @questions.each do |question|
      %tr
        %td 
          = question.id
        %td.question-content 
          = strip_tags question.content
        %td 
          = question.right_answer
        %td 
          = question.display_order
        %td 
          = question.created_at
        %td 
          = question.updated_at
        %td
          = link_to 'Show', [:admin, question], class: 'btn btn-info'
        %td
          = link_to 'Edit', edit_admin_question_path(question), class: 'btn btn-warning'
        %td
          = link_to 'Destroy', [:admin, question], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'

%br/
= link_to 'New Question', new_admin_question_path, class: 'btn btn-info'
